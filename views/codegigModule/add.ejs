<section id="add" class="container">
  <div class="form-wrap">
    <h1>Add A Gig</h1>
    <p>Your contact email will be shared with registered users to apply to your gig</p>
    <%- include ('../partials/messages') %>
    <form action="/gigs/add" method="POST" autocomplete="on">
      <div class="input-group">
        <label for="title">Gig Title</label>
        <input
          type="text"
          name="title"
          class="input-box"
          placeholder="eg. Small Wordpress website, React developer"
          maxlength="100"
          value="<%= typeof title != 'undefined' ? title : '' %>"
        />
      </div>
      <div class="input-group">
        <label for="technologies">Technologies Needed</label>
        <input
          type="text"
          name="technologies"
          class="input-box"
          placeholder="eg. javascript, react, PHP"
          maxlength="100"
          value="<%= typeof technologies != 'undefined' ? technologies : '' %>"
        />
      </div>
      <div class="input-group">
        <label for="budget">Budget (Leave blank for unknown)</label>
        <input
          type="number"
          name="budget"
          class="input-box"
          placeholder="eg. 500, 5000, 10000"
          value="<%= typeof budget != 'undefined' ? budget : '' %>"
        />
      </div>
      <div class="input-group">
        <label for="description">Gig Description</label>
        <textarea name="description" class="input-box" placeholder="Describe the details of the gig" rows="8">
<%= typeof description != 'undefined' ? description : '' %></textarea
        >
      </div>

      <input type="submit" value="Add Gig" class="btn btn-reverse" />
    </form>
  </div>
</section>
